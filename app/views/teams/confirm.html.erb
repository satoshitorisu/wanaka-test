<%= render 'partial/layout/navbar'%>

<div class="content">
	<h1>入力情報を確認</h1>
	<hr>
	<%= attachment_image_tag @team, :image, :fill, 300, 300, format: 'jpeg' %>
	
	<%#= debugger %>

    <div class="form-group">
		<h2>チーム名：<%= @team.name %></h2>
	</div>
    <div class="form-group">
		<h2> 組織名：<%= @team.organization %></h2>
	</div>
    <div class="form-group">
		<h2>活動地域：<%= @team.active_place %></h2>
	</div>
    <div class="form-group">
		<h2> レベル：<%= @team.level %></h2>
	</div>
    <div class="form-group">
		<h2> 創設年：<%= @team.established_year %></h2>
	</div>
    <div class="form-group">
		<h2> 紹介文：<%= @team.description %></h2>
	</div>

    <div class="form-group">
		<%= form_for(@team, url: {action: 'complete'}, name: :team) do |f|  %>
		    <%= f.hidden_field :name %>
		    <%= f.hidden_field :organization %>
		    <%= f.hidden_field :active_place %>
		    <%= f.hidden_field :level %>
		    <%= f.hidden_field :established_year %>
		    <%= f.hidden_field :description %>
		    <%= f.hidden_field :image %>
		    <%= f.submit '登録' , class:"form-control, form-width login-btn" %> 
		<% end %>
	</div>
</div>
<%= render 'partial/layout/footer'%>
