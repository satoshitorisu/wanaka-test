<%= render 'partial/layout/navbar'%>
<div class="content">
	<h1>練習相手募集</h1>
	<hr>
	<%= form_for(@game) do |f| %>
		<% if @multi_teams %>
			<%= f.select :team_id, @admin_team.map{|t| [t.id]} %>

		<% else %>
			<%= @admin_team.team.name %>
			<%= f.hidden_field :team_id, :value => @admin_team.team_id %>
	<% end %>
		<%= f.hidden_field :user_id, :value => current_user.id %>
	    <%= f.label :タイトル %><br>
	    <%= f.text_field :title ,{required: 'true', autofocus: 'true', placeholder: "ゲーム募集一覧に表示されるタイトルになります。	" , class: 'form-control, form-width'} %>
		<br>
		<br>
	    <%= f.label :場所 %><br>
	    <%= f.text_field :place ,{required: 'true', autofocus: 'true', placeholder: "コート名、コート番号等より詳しくご記入ください" , class: 'form-control, form-width'} %>
		<br>
		<br>
	    <%= f.label :開催日 %><br>
	    <%= f.date_field :start_time ,{required: 'true', autofocus: 'true', placeholder: "" , class: 'form-control, form-width'} %>
		<br>
		<br>
	    <%= f.label :集合時間 %><br>
	    <%= f.time_field :start_time ,{required: 'true', autofocus: 'true', placeholder: "" , class: 'form-control, form-width'} %>
		<br>
		<br>
	    <%= f.label :終了時間 %><br>
	    <%= f.time_field :end_time ,{required: 'true', autofocus: 'true', placeholder: "" , class: 'form-control, form-width'} %>
		<br>
		<br>
	    <%= f.label :必要となる費用、等 %><br>
	    <%= f.number_field :price ,{required: 'true', autofocus: 'true', placeholder: "" , class: 'form-control, form-width'} %>
		<br>
		<br>
	    <%= f.label :備考欄 %><br>
	    <%= f.text_area :memo ,{required: 'true', autofocus: 'true', placeholder: " 事前に相手チームに伝えておきたい事項があれば記載してください" , class: 'form-control, form-width'} %>
		<br>
		<br>
	    <%= f.submit '作成' , class:"btn wanaka-btn btn-create" %> 
	<% end %>

	<br>
	<hr>
	<br>

	<%= link_to '戻る', :back  ,class:"btn wanaka-btn btn-complete" %>
</div>
<%= render 'partial/layout/footer'%>
