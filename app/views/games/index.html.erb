
<%= render 'partial/layout/navbar'%>

<div class="content">
	<h4>募集一覧</h4>
	<hr>
	<% @games.each do |game| %>
		<div class="game-index-box clearfix">
			<div class="game-index-box-img">
				<%= attachment_image_tag game.team, :image, :fill, 180, 180, format: 'jpeg' %>
			</div>
			<div class="game-index-box-show">
				<table class="table">
				  <tbody>
				    <tr>
				      <td class="game-index-box-show-td">チーム名</td>
				      <td class="game-index-box-show-td"><%= game.team.name %></td>
				    </tr>
				    <tr>
				      <td class="game-index-box-show-td">タイトル:</td>
				      <td class="game-index-box-show-td"><%= game.title %></td>
				    </tr>
				    <tr>
				      <td class="game-index-box-show-td">場所:</td>
				      <td class="game-index-box-show-td"><%= game.place %></td>

				    </tr>
				    <tr>
				      <td class="game-index-box-show-td">チームレベル</td>
				      <td class="game-index-box-show-td"><%= game.team.level %></td>
				    </tr>
				    <tr>
				      <td class="game-index-box-show-td">コート代:</td>
				      <td class="game-index-box-show-td">¥<%= game.price %>
				      	<span class="game-index-box-show-detail"><%= link_to '>詳しくはこちら', game_path(game), class:"game-index-box-show-detail" %></span>
				      </td>
				    </tr>
				  </tbody>
				</table>
			</div>
		</div>
	<% end %>
</div>


<%= render 'partial/layout/footer'%>

