<%= render 'partial/layout/navbar'%>

<div class="content">
  <h1>会員登録</h1>
  <hr>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true,class:"form-control, form-width", autocomplete: "メールアドレス" ,placeholder: "email" %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %><br />
      <%= f.password_field :password, class:"form-control, form-width",autocomplete: "off" ,placeholder: ""%>
    </div>

    <div class="form-group">
      <%= f.label :パスワード（確認用） %><br />
      <%= f.password_field :password_confirmation, class:"form-control, form-width",autocomplete: "off" ,placeholder: ""%>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "アカウント作成" ,class:"wanaka-btn btn-invite" %>
    </div>
  <% end %>
  <br>
  <hr>

  <%= render "devise/shared/links" %>
</div>

<%= render 'partial/layout/footer'%>