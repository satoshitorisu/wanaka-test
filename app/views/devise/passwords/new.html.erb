<header>
  <div class="header-left">
    wanaka
  </div>
</header><!-- /header -->

<div class="content">
	<h2>パスワードの再設定</h2>
	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="field">
	  	<br>
	  	<br>
	    <%= f.label :メールアドレス %><br />

	    <%= f.email_field :email, class:"form-control, form-width" ,autofocus: true, autocomplete: "email" %>
	  </div>
	  <br>
	  <div class="actions">
	    <%= f.submit "リセット", class:"wanaka-btn btn-complete" %>
	  </div>
	<% end %>
<br>
<%= render "devise/shared/links" %>
</div>
<%= render 'partial/layout/footer'%>