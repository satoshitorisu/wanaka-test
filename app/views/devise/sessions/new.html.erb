<header>
  <div class="header-left">
    wanaka
  </div>
</header><!-- /header -->


<div class="content">
  <h1>ログイン</h1>
  <hr>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="form-group">
      <%= f.label :メールアドレス %><br/>
      <%= f.email_field :email,class:"form-control, form-width" ,placeholder: "email", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, class:"form-control, form-width", placeholder: "",autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :ログインした状態にする , class:"login-btn-support" %>
      </div>
    <% end -%>
    <br>
    <div class="actions">
      <%= f.submit "＞ ログイン" ,class:"wanaka-btn btn-create" %>
    </div>
  <% end %>
  <br>
  <hr>

  <%= render "devise/shared/links" %>
</div>

<footer>
  @copyright all...
</footer>
