<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-2 text-center row-space-1">
                <%#= image_tag message.user.image, class: "img-circle profile-1" %>

                <h4 class="message-index-username"><%= message.user.username %></h4>
            </div>

            <div class="col-md-8">
                <%= message.body %>
            </div>

            <div class="col-md-2">
                <span class="pull-right"><small><%= message.message_time %></small></span>
            </div>
        </div>
    </div>
</div>